<div class="container">

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <p></p>
  <%= f.text_field :title %>
  <p></p>
  <%= f.label :details %>
  <p></p>
  <%= f.text_area :details %>
  <p></p>
  <%= f.label :completed %>
  <p></p>
  <%= f.check_box :completed %>
  <p></p>
  <%= f.submit class:"btn btn-primary" %>
<% end %>

<%= link_to "Back to List", tasks_path %>

</div>
