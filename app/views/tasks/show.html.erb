<div class="container">
  <h1><%= @task.title %></h1>
  <p></p>
  <h2><%= @task.details %></h2>
  <p></p>
  <% if @task.completes.find_by(date: Date.today).status == false %>
    <h2>Done today?</h2>
    <%= render 'completes/done', complete: @complete %>
  <% elsif @task.completes.find_by(date: Date.today).status == true %>
    <h2>Great! Already done today!</h2>
  <% elsif @task.completes.find_by(date: Date.today).nil? %>
    <h2>This task has been created for over 30 days. If you want to keep a new record, please create a new task.</h2>
  <% end %>
  <%# <% end %>
  <div class="checks">
    <% @task.completes.each do |complete| %>
      <% if complete.status == true %>
