<div class="container">
  <h1>My daily tasks</h1>
  <p></p>
  <% @tasks.each do |task| %>
    <div class="each-titles">
      <%= link_to task.title, task_path(task) %>
    </div>
    <div>
      <% task.completes.each do |complete|  %>
        <%= complete.date %>
        <%= complete.status %>
      <% end %>
    </div>
    <%# <div class="trash">
<%= link_to "", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"}, class:"fa-solid fa-trash-can" %>
    <p></p>
  <% end %>
  <%= link_to "Add new task", new_task_path, class:"btn btn-primary"%>
</div>
